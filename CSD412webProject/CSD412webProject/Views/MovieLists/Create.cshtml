@model CSD412webProject.Models.MovieList

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>MovieList</h4>
<hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div>
                    <input type="hidden" asp-for="ListOfMovieListsId" />
                </div>
                <div class="form-group">
                    <label asp-for="MovieListName" class="control-label"></label>
                    <input asp-for="MovieListName" class="form-control" />
                    <span asp-validation-for="MovieListName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MovieListLink" class="control-label"></label>
                    <input asp-for="MovieListLink" class="form-control" />
                    <span asp-validation-for="MovieListLink" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsPublic" /> @Html.DisplayNameFor(model => model.IsPublic)
                    </label>

                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
